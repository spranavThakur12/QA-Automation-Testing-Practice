
/* 6.	Open https://www.echotrak.com/Login.aspx?ReturnUrl=%2f (absoulte and relative)
	a.	Enter username as your name (using locator xpath)
	b.	Enter password as yourname_123 (using locator xpath)
	c.	Click on login button. (using locator xpath)
	d.	Display the error message */

package WebDriver_Demos;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.WebElement;
public class LocatorPracticeUsingBy_Id {

	public static void main(String[] args) throws InterruptedException {
		// Opening the Browser.
		WebDriver driver = new ChromeDriver();
		//maximizing the browser
		driver.manage().window().maximize();
		//Hitting the url
		driver.get("https://www.echotrak.com/Login.aspx?ReturnUrl=%2fnull");
		String urlTitle = driver.getTitle();
		if(urlTitle.equals("EchoTrak Login")) {
			System.out.println("Test Case Pass Title is:--> " + urlTitle);
		} else {
			System.out.println("Test Case Fail:-->");
		}
		WebElement userName = driver.findElement(By.xpath("//input[@type='text']"));
		Thread.sleep(4000);
		userName.sendKeys("PranavSingh");
		WebElement password = driver.findElement(By.xpath("//input[@type='password']"));
		Thread.sleep(4000);
		password.sendKeys("Pranav@1223%334")
		WebElement error = driver.findElement(By.xpath("//span[@class='error']"));
		Thread.sleep(10000);
		driver.close();
	}
}
